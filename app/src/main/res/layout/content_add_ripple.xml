<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_ripple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.brian.progproj.AddRippleActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_menu_camera"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="6dp"
        android:onClick="onSelectImage"
        android:id="@+id/imageButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Ripple Name"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Heightb"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignBaseline="@+id/depthb"
        android:layout_alignBottom="@+id/depthb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Ripple height" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/depthb"
        android:layout_below="@+id/editText"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:hint="Depth" />

</RelativeLayout>
